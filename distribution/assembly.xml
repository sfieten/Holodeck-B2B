<assembly>
    <id>default</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>holodeckb2b-${project.version}</baseDirectory>
    
    <fileSets>
        <!--
	        Copy base directory structure Holodeck B2B adapted Axis2 base to target
	
	        This includes all relevant configuration files, example data, and key stores 
	        needed for the default security provider.
        -->
        <fileSet>
        	<outputDirectory>.</outputDirectory>
            <directory>basedir</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>.*</exclude>
            </excludes>
        </fileSet>
        <!--
        	Copy the project documentation like README and CHANGELOG from the parent
        -->
        <fileSet>
        	<outputDirectory>.</outputDirectory>
            <directory>../</directory>            
            <includes>
                <include>*.md</include>                
                <include>*.MD</include>                
            </includes>
        </fileSet>       
    </fileSets>

    <dependencySets>
        <!-- Add the Axis2 service for handling AS4 -->
        <dependencySet>
            <outputDirectory>repository/services</outputDirectory>
            <includes>
                <include>org.holodeckb2b:*:aar</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        
    	<!-- Add the XML schema's -->
		<dependencySet>
			<outputDirectory>repository/</outputDirectory>
			<includes>
				<include>org.holodeckb2b.extensions:file-backend</include>
				<include>org.holodeckb2b:*:jar</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>**/*.xsd</include>
				</includes>
			</unpackOptions>
		    <useTransitiveDependencies>false</useTransitiveDependencies>
		    <useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	    <!-- Add all required libraries to the lib directory -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*:*:aar</exclude>
            </excludes>
            <scope>runtime</scope>            
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
